<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ayon.rahman.shafiqur.bptl.clientViewByDate"
    tools:showIn="@layout/app_bar_client_view_by_date">

    <Button
        android:id="@+id/bydate"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#01B0B5"
        android:text="Select Start Date" />

    <Button
        android:id="@+id/viewAll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/bydate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="#01B0B5"
        android:text="Select End Date" />

    <Button
        android:id="@+id/viewDates"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/viewAll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#01B0B5"
        android:text="View Entries" />

    <TextView
        android:id="@+id/starttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bydate"
        android:layout_centerHorizontal="true"
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/endtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAll"
        android:layout_centerHorizontal="true"
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
